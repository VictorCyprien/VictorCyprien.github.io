<style>
	:root {
		--carrer-color : linear-gradient(to top, #d5dce9, #c9d1ef, #c7c3f3, #cdb3f1, #d9a0e9);
		--timeline-panel-cross : #d9a0e9;
		--education-color : linear-gradient(to top, #d5dce9, #c9d1ef, #c7c3f3, #cdb3f1, #d9a0e9);
		--text-color: #000000;
	}


	:root.theme-dark {
		--carrer-color : linear-gradient(to top, #393e46, #30415d, #284375, #24438b, #2d419f);
		--timeline-panel-cross : #2d419f;
		--education-color : linear-gradient(to top, #393e46, #30415d, #284375, #24438b, #2d419f);
		--text-color: #FFFFFF;
	}


	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}

	.timeline{
		padding: 30px 10px;
		position: relative;
		color: var(--text-color);
	}

	.timeline:before{
		top: 0;
		bottom: 0;
		position: absolute;
		content: " ";
		width: 5px;
		background: #6474a2;
		left: 50%;
		margin-left: -2.5px;
	}

	.company {
		text-align: center; 
		font-weight: bold; 
	}

	.role {
		text-align: center; 
		font-weight: bold;
	}

	.date{
		text-align: center;
	}

	.mission {
		text-align: center; 
		font-weight: bold; 
		text-decoration: underline
	}

	.tech {
		text-align: center; 
		font-weight: bold; 
		text-decoration: underline
	}

	.timeline li{
		list-style-type: none;
		margin: 1px;
		padding: 1px;
	}

	.timeline li:after{
		clear: both;
	}

	.timeline li:before, .timeline li:after{
		content: "";
		display: table;
	}

	.timeline li .timeline-badge{
		color: #000;
		width: 50px;
		line-height: 50px;
		font-size: 20px;
		text-align: center;
		position: absolute;
		top: 16px;
		left: 50%;
		margin-left: -25px;
		background-color: #ddd;
		border-radius: 50%;
	}

	.timeline-panel-container{
		width: 50%;
		float: left;
	}

	.timeline-panel-container-inverted{
		width: 50%;
		float: right;
	}

	.timeline-panel{
		width: 90%;
		float: right;
		margin-right: 40px;
		border-radius: 7px;
		padding: 20px 25px;
		position: relative;
		box-shadow: 0 1px 6px rgba(0, 0, 0, 0.175);
		background-image: var(--carrer-color);
	}

	.timeline-panel-container-inverted .timeline-panel{
		float: left;
		margin-left: 40px; 
	}

	.timeline-panel:after{
		position: absolute;
		top: 27px;
		right: -14px;
		display: inline-block;
		border: 2px solid #000;
		border-top: 14px solid transparent;
		border-left: 14px solid var(--timeline-panel-cross);
		border-right: 0 solid var(--timeline-panel-cross);
		border-bottom: 14px solid transparent;
		content: " ";
	}

	.timeline-panel-container-inverted .timeline-panel:after{
		border-left-width: 0;
		border-right-width: 14px;
		left: -14px;
		right: auto;
	}

	.timeline-heading h3{
		margin-top: 5px;
		font-size: 20px;
		color: #000;
	}

	.timeline-heading h4{
		color: var(--text-color);
	}

	#education{
		background: #e3e6ee;
	}

	.col-sm-6{
		flex:0 0 auto;
		width:70%;
		margin-left: auto;
    	margin-right: auto;
	}

	#education .heading h2{
		color: #e3e6ee;
	}

	.education-block{
		width: 80%;
		margin: 0 auto;
		text-align: center;
		padding: 30px;
		background: var(--education-color);
		border-radius: 10px;
		margin-bottom: 20px;
	}

	.education-block h5{
		color: var(--text-color);
		font-size: 15px;
		margin-bottom: 15px;
	}

	.education-block i{
		font-size: 30px;
		color: #000;
	}

	.education-block h3{
		color: var(--text-color);
	}

	.education-block h4{
		margin-bottom: 20px;
		color: var(--text-color);
	}

	.education-block p{
		font-weight: bold;
		color: var(--text-color);
	}

	.education-block .divider-black{
		margin-bottom: 20px;
	}

</style>
